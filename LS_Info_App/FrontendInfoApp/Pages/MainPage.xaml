<Page
    x:Class="FrontendInfoApp.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FrontendInfoApp.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>

        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Offset="0.0" Color="#72C6EF" />
                <GradientStop Offset="1.0" Color="#004E8F" />
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="100*" />
            <ColumnDefinition Width="100*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>


        
            <Border
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="0"
                Margin="6"
                BorderBrush="White"
                CornerRadius="7">

                <Border.Background>
                    <SolidColorBrush Opacity="0.6" Color="White" />
                </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100*" />
                    <RowDefinition Height="100*" />
                    <RowDefinition Height="100*" />
                    <RowDefinition Height="100*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*" />
                    <ColumnDefinition Width="100*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding sCity}" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center"/>

                <Image Source="{Binding IconUrl}" Width="80" Height="80"/>
                <TextBlock Text="{Binding Temperature}" FontSize="54" VerticalAlignment="Center" Margin="10,0"/>

            </Grid>
        </Border>
        


        <Border
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="0"
            Margin="6"
            BorderBrush="White"
            CornerRadius="7">

            <Border.Background>
                <SolidColorBrush Opacity="0.6" Color="White" />
            </Border.Background>

        </Border>

        <Border
            Grid.Row="0"
            Grid.RowSpan="5"
            Grid.Column="1"
            Margin="6"
            BorderBrush="White"
            CornerRadius="7">

            <Border.Background>
                <SolidColorBrush Opacity="0.6" Color="White" />
            </Border.Background>

        </Border>

        <Border
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="2"
            Margin="6"
            BorderBrush="White"
            CornerRadius="7">

            <Border.Background>
                <SolidColorBrush Opacity="0.6" Color="White" />
            </Border.Background>

        </Border>


        <Border
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="2"
            Margin="6"
            BorderBrush="White"
            CornerRadius="7">

            <Border.Background>
                <SolidColorBrush Opacity="0.6" Color="White" />
            </Border.Background>

        </Border>


        <Border
            Grid.Row="4"
            Grid.Column="2"
            Margin="6"
            BorderBrush="White"
            CornerRadius="7">

            <Border.Background>
                <SolidColorBrush Opacity="0.6" Color="White" />
            </Border.Background>

        </Border>

    </Grid>
</Page>
